# ==============================
# Custom Snort Rules
# ==============================

# Rule 1: Detect ICMP Ping
alert icmp any any -> $HOME_NET any (
    msg:"ICMP Ping Detected";
    sid:1000001;
    rev:1;
)

# Rule 2: Detect TCP Port Scan
alert tcp any any -> $HOME_NET any (
    flags:S;
    msg:"Possible TCP Port Scan";
    sid:1000002;
    rev:1;
)

# Rule 3: Detect SSH Brute Force Attempt
alert tcp any any -> $HOME_NET 22 (
    msg:"SSH Connection Attempt Detected";
    sid:1000003;
    rev:1;
)
